<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    
  </head>
  <body style="background-color: #414141;font-size: large;">
    <%- include('./partials/nav') %>

    <div class="container mt-3" >
      <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card col m-3 " style="width: 18rem " >
            <img src="<%= blog.coverImageURL %>" class="card-img-top" style="height: 300px;object-fit: cover;" />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
